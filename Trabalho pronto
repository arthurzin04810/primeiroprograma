    if(qualveiculo==1){
        troco=valorpago-5;
    }else if(qualveiculo==2){
        troco=valorpago-10;
    }else if(qualveiculo==3){
        troco=valorpago-20;
    }else if(qualveiculo==4){ 
        troco=valorpago-30; 
    }else{
        if(qualveiculo);
    } 
      if(troco<0){ 
    printf("tá lizo? Tá faltando dinheiro.");
    return -1;}
    
    printf("o troco foi %.2f",troco);
    
   
    
    
    
    
    
     
